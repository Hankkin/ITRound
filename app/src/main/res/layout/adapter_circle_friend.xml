<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/dp_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerVertical="true"

        android:id="@+id/iv_cir_icon"
        android:src="@mipmap/icon_user_default"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:paddingRight="@dimen/dp_16"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_cir_icon"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_adapter_cir_name"
                style="@style/black_text"
                android:text="Hankkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_adapter_cir_sex"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@mipmap/da_ren_list_girl"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </LinearLayout>
        <TextView
            android:maxLines="2"
            android:id="@+id/tv_adapter_cir_desc"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/home_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>